<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/bg_dialog_button_list" 
    android:padding="20.0dip" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:id="@+id/buttonlist"
        android:orientation="vertical"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="@dimen/download_option_first_button_margin_top"
        android:layout_alignParentTop="true" 
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn_option_install"
            
       		 android:layout_marginTop="@dimen/download_option_button_margin_top"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            
            android:layout_width="@dimen/download_option_button_width"
            android:layout_height="@dimen/general_button_height"
            android:background="@drawable/bg_btn_green_selector"
            android:text="@string/title_btn_install"
            android:textSize="@dimen/button_title_text_size"
            android:textColor="@drawable/btn_color"
			android:shadowColor="@color/button_title_shadow_color"  
    		android:shadowDx="@integer/button_text_shadow_dx"  
    		android:shadowDy="@integer/button_text_shadow_dy"       
    		android:shadowRadius="@integer/button_text_shadow_radius"            
            />
        <Button
            android:id="@+id/btn_option_upgrade"
       		 android:layout_marginTop="@dimen/download_option_button_margin_top"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"

            android:layout_width="@dimen/download_option_button_width"
            android:layout_height="@dimen/general_button_height"
            android:background="@drawable/bg_btn_orange_selector"
            android:text="@string/title_btn_upgrade"
            android:textSize="@dimen/button_title_text_size"
            android:textColor="@drawable/btn_color"
			android:shadowColor="@color/button_title_shadow_color"  
    		android:shadowDx="@integer/button_text_shadow_dx"  
    		android:shadowDy="@integer/button_text_shadow_dy"       
    		android:shadowRadius="@integer/button_text_shadow_radius"            
            />
        
        <Button
            android:id="@+id/btn_option_open"
       		 android:layout_marginTop="@dimen/download_option_button_margin_top"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="@dimen/download_option_button_width"
            android:layout_height="@dimen/general_button_height"
            android:background="@drawable/bg_btn_green_selector"
            android:text="@string/title_btn_open"
            android:textSize="@dimen/button_title_text_size"
            android:textColor="@drawable/btn_color"
			android:shadowColor="@color/button_title_shadow_color"  
    		android:shadowDx="@integer/button_text_shadow_dx"  
    		android:shadowDy="@integer/button_text_shadow_dy"       
    		android:shadowRadius="@integer/button_text_shadow_radius"            
            />
        
        <Button android:id="@+id/btn_option_delete" 
            android:focusable="true" 
            android:clickable="true" 
            android:visibility="gone"
       		 android:layout_marginTop="@dimen/download_option_button_margin_top"

            android:layout_width="@dimen/download_option_button_width"
            android:layout_height="@dimen/general_button_height"
            android:background="@drawable/bg_btn_red_selector"
            android:text="@string/title_btn_delete"
            android:textSize="@dimen/button_title_text_size"
            android:textColor="@drawable/btn_color"
			android:shadowColor="@color/button_title_shadow_color"  
    		android:shadowDx="@integer/button_text_shadow_dx"  
    		android:shadowDy="@integer/button_text_shadow_dy"       
    		android:shadowRadius="@integer/button_text_shadow_radius"            
		/>
        </LinearLayout>
        <Button android:id="@+id/btn_option_cancel" 
            android:focusable="true" 
            android:clickable="true" 
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/buttonlist"
            android:layout_alignRight="@+id/buttonlist"
            android:layout_marginBottom="30dip"

            android:layout_width="@dimen/download_option_button_width"
            android:layout_height="@dimen/general_button_height"
            android:background="@drawable/bg_btn_gray_selector"
            android:text="@string/title_btn_cancel"
            android:textSize="@dimen/button_title_text_size"
            android:textColor="@drawable/btn_color"
			android:shadowColor="@color/button_title_shadow_color"  
    		android:shadowDx="@integer/button_text_shadow_dx"  
    		android:shadowDy="@integer/button_text_shadow_dy"       
    		android:shadowRadius="@integer/button_text_shadow_radius"            
		/>
    
</RelativeLayout>