<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="20dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="@dimen/applist_app_item_width"
        android:layout_height="@dimen/applist_app_item_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/app_loading" />
    
    <TextView
        android:id="@+id/textViewTitle"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/applist_app_item_text_height"
        android:textSize="@dimen/applist_app_item_text_size"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewIcon"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:ellipsize="marquee"
        android:text="APP Name"
        />
    
    <ImageView
        android:id="@+id/imageViewButton"
        android:visibility="invisible"
        android:layout_width="@dimen/applist_app_item_button_width"
        android:layout_height="@dimen/applist_app_item_button_height"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dip"
        android:src="@drawable/btn_show_detail" />


</RelativeLayout>
