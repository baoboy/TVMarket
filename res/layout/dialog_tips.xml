<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_tips"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
    <ImageView
        android:id="@+id/imageViewLoading"
        android:layout_width="@dimen/tips_dialog_loading_width"
        android:layout_height="@dimen/tips_dialog_loading_height"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:src="@drawable/publicloading" />
    
        <TextView
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tips_dialog_text_size"
        android:gravity="center"
        android:text="TextView" />

</LinearLayout>
</RelativeLayout>
